{
  "version": 2,
  "builds": [
    {
      "src": "api/shorten.go",
      "use": "@vercel/go"
    },
    {
      "src": "api/redirect.go",
      "use": "@vercel/go"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.go",
      "methods": ["POST"]
    },
    {
      "src": "/(?<shortCode>[a-zA-Z0-9]{7})",
      "dest": "/api/redirect.go?shortCode=$shortCode"
    },
    {
      "src": "/(.*)",
      "dest": "/static/$1"
    }
  ]
}
